<div>
<div class='container'>
    <div class='row justify-content-center'>
        <div class='col-5 apply_form'>
<h1>申し込み</h1>
<%=form_with model: @post do |f|%>
<%= f.hidden_field :task_id, value: @task.user_id %>
<%= f.hidden_field :email, value: current_user.email %>
<p>名前</p>
<%=f.text_field:name,class:'form-control'%>
<p >年齢</p>
<%= f.number_field:old,min:10,max:100%>
<P>性別</P>
<%=f.radio_button :sex, :'男性' %>
<%=f.label :sex, "男性", {value: :'男性', style: "display: inline-block;"} %>
<%=f.radio_button :sex, :'女性' %>
<%=f.label :sex, "女性", {value: :'女性', style: "display: inline-block;"} %>
<p>コメント</p>
<%=f.text_area:content,class:'form-control'%><br>
<%=f.submit 'メッセージを送る' ,class:'form-control btn btn-primary'%>
<%end%>    
            
        </div>
    </div>
</div>
    
</div>
