<h1>メッセージ一覧</h1>


<table class="table topic container">
    <thead>
        <tr>
            <th>名前</th>
            <th>受信時間</th>
            <th>消去</th>
        </tr>
    </thead>
    <tbody>
    <%@posts.each do |p|%>
        <tr>
            <td><a href="/detail/<%=p.id%>"><%=p.content%></a></td>
            <td><%=p.created_at.strftime("%Y-%m-%d %H:%M")%></td>
            <td><%=link_to '消去','#', class:'btn btn-danger'%></td>
        </tr>
        <%end%>
    </tbody>
</table>
