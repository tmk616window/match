

<div class='container show_tasks'>
<div class='row justify-content-between show_tasks_title'>
<h2><%=@task.name%></h2>
<P><%=link_to '団体情報',staff_path(current_user.id)%></P>
</div>    
    <div class='row justify-content-center'>
        <div class='show_tasks_form col-9 '>
<div class='show_tasks_detail'>
    <h5>基本情報</h5>
</div>            
<div class='show_tasks_image'>
    <%= image_tag @task.picture.url, width:'100%',height:'100%'%>
</div>            
    <div class='row justify-content-center'>
    <div class=' col-12 detail'>
    <table class="table">
    <tbody>
        <tr>
            <th>住所</th>
            <td><%="#{@task.address}"%></td>
        </tr>
        <tr>
            <th>最寄り駅</th>
            <td><%="#{@task.station}"%></td>
        </tr>
        <tr>
            <th>時間</th>
            <td><%="#{@task.time}"%></td>
        </tr>
        <tr>
            <th>活動頻度</th>
            <td><%="#{@task.week}"%></td>
        </tr>
    </tbody>
    </table>
    </div>
    </div>

<div class='show_tasks_content'>
<h6>詳細設定</h6>
<%=@task.content%>
</div>
<br>
<br>
<br>
<div class='tasks_show_button'>
<h5><%=link_to 'このボランティアに応募する' ,post_path(@task.id), class:'btn btn-primary ,rows: 10'%></h5>
<h5><%=link_to '編集' ,edit_task_path(@task.id), class:'btn btn-primary ,rows: 10'%></h5>
<h5><%=link_to "消去", task_path(@task.id),method: :delete,class:'btn btn-danger',data: {confirm: "投稿を消去しますか？"}%></h5>
</div>
        </div>
    </div>
</div>
