<div class='container show_staff'>
    <div class='row justify-content-center show_staff'>
        <div class='col-7'>
        <div class=' show_staff_form'>
            <p><%=link_to "編集" ,edit_user_path(@user), class:'btn btn-primary show_staff_edit_button'%></p>
            <div class='show_staff_image'>
                  <% if @user.icon? %>
                    <%= image_tag @user.icon.url, width:'100%',height:'100%' %>
                  <% else %>
                      <p>画像なし</p>
                  <% end %>

            </div>
            <div class='show_staff_message'>
                <p>メッセージ</p>
                <%=safe_join(@user.user_message.split("\n"),tag(:br))%>
            </div>
            <div class='show_staff_table'>
                
<table>
    <tbody>
        <tr>
            <th>団体名</th>
            <td><%=@user.organization_name%></td>
        </tr>
         <tr>
            <th>住所</th>
            <td><%=@user.user_address%></td>
        </tr>
         <tr>
            <th>設立日</th>
            <td><%=@user.born%></td>
        </tr>
    </tbody>
</table>

            </div>
        </div>
            
        </div>
        
        <div class='col-4'>
        <div class=' show_staff_tasks'>
                <h2>投稿一覧</h2>
             <%@tasks.each do |t|%>
             <div class='show_staff_tasks_element'>
             <a href="/tasks/<%=t.id%>"%><h3><%=t.name%></h3></a>
             <p><%=t.created_at.strftime("%Y/%-m/%-d %-H時%-M分")%></p>
            </div>
             <%end%>
        </div>
            
    </div>
  </div>
</div>



    




